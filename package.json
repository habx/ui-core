{
  "name": "@habx/ui-core",
  "version": "2.1.0",
  "description": "HABX Design System",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/typings/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:types && bili",
    "build:watch": "npm run clean && npm run build:types && bili --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "postbuild": "node ./scripts/postbuild.js",
    "publish": "cd dist && npm publish && cd ..",
    "lint": "eslint \"src/**\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o .storybook-static",
    "storybook:deploy": "storybook-to-ghpages -s storybook:build --ci -t=GITHUB_TOKEN",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type:coverage": "tscov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habx/ui-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/habx/ui-core/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "homepage": "https://github.com/habx/ui-core#readme",
  "dependencies": {
    "@delangle/use-modal": "^1.3.29",
    "color": "^3.1.2",
    "lodash.deburr": "^4.1.0",
    "lodash.get": "^4.4.2",
    "markdown-it": "^10.0.0",
    "markdown-it-sup": "^1.0.0",
    "merge": "^1.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-easy-swipe": "0.0.18",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@habx/eslint-config-client": "^2.0.6",
    "@liftr/tscov": "^1.4.1",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-centered": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/addon-viewport": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@storybook/storybook-deployer": "^2.8.1",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.3",
    "@types/color": "^3.0.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/lodash.deburr": "^4.1.6",
    "@types/lodash.get": "^4.4.6",
    "@types/markdown-it": "0.0.9",
    "@types/node": "^13.1.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/sinon": "^7.0.13",
    "@types/storybook__addon-info": "^5.2.1",
    "@types/styled-components": "^4.1.19",
    "awesome-typescript-loader": "^5.2.1",
    "bili": "^4.8.0",
    "husky": "^4.0.7",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "lodash": "^4.17.11",
    "rimraf": "^3.0.0",
    "rollup-plugin-typescript2": "^0.25.1",
    "sinon": "^8.0.0",
    "storybook-addon-designs": "^5.1.1",
    "styled-normalize": "^8.0.6",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "storybook-deployer": {
    "commitMessage": "[SKIP CI] Deploy Storybook to GitHub Pages"
  }
}
